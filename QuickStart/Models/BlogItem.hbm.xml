<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="QuickStart" namespace="QuickStart.Models">

  <class
      name="BlogItem"
      table="BLOG_ITEMS"
      dynamic-update="true">

    <id
        name="Id"
        column="BLOG_ITEM_ID">

      <generator class="native"/>

    </id>

    <property
        name="Title"
        column="TITLE"
        not-null="true"/>

    <property
        name="Text"
        column="TEXT"
        not-null="true"/>

    <property
        name="DateTime"
        column="DATE_TIME"
        not-null="true"/>

    <many-to-one
        name="Blog"
        column="BLOG_ID"
        not-null="true"/>

  </class>

</hibernate-mapping>